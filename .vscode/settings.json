{
  "cSpell.words": [
    "executemany",
    "fastapi",
    "pydantic",
    "Redoc",
    "sessionmaker",
    "sqlalchemy"
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false,
    },
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length",
    "120"
  ],
  "editor.tabSize": 4,
}
